<%- include('partials/header') -%>
<div class="container">
  <% if (locals.messages.errors) { %>
    <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger row justify-content-center"><%= el.msg %></div> <!-- bootstrap classes - different ways to add default style -->
    <% }) %>    
<% } %>
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p class="text-white"><strong>User Name</strong>: <%= user.userName %></p>
              <p class="text-white"><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="btn btn-info">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Ask a question</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="text-white form-label">Question (cannot be left blank)</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="text-white form-label">Additional Info</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="text-white form-label">Image (.jpg, .jpeg, or .png)</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-info" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a class="text-info text-decoration-none" href="/post/<%= posts[i]._id%>">
              <h2><%= posts[i].title%></h2>
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="d-flex justify-content-center mb-5 mt-5"> <!-- class="row justify-content-center mt-5" -->
          <a class="btn btn-info" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>